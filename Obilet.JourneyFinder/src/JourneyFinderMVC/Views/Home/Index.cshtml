@using Models.Responses
@model JourneySearchModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Bilet Ara</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
</head>
<body>
    <div class="outer-container">
        <div class="inner-box"></div>

        <form asp-action="Index" asp-controller="Journey" method="post">
            <div class="card">
                <div class="form-group location-row">
                    <div class="location-box">
                        <label>Nereden</label>
                        <div class="location-content">
                            <span class="icon">📍</span>
                            <select name="OriginId" id="origin">
                                @foreach (var journey in (List<BusLocation>)TempData["journeys"])
                                {
                                    if (journey.Id == Model.OriginId)
                                    {
                                        <option value="@journey.Id" selected>@journey.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@journey.Id">@journey.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <button type="button" id="switchBtn" class="switch-btn">⇅</button>

                    <div class="location-box">
                        <label>Nereye</label>
                        <div class="location-content">
                            <span class="icon">📍</span>
                            <select name="DestinationId" id="destination">
                                @foreach (var journey in (List<BusLocation>)TempData["journeys"])
                                {
                                    if (journey.Id == Model.DestinationId)
                                    {
                                        <option value="@journey.Id" selected>@journey.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@journey.Id">@journey.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Tarih</label>
                    <div class="date-row">
                        <span class="calendar-icon">📅</span>
                        <input type="date" name="DepartureDate" id="DepartureDate" value="@Model.DepartureDate.ToString("yyyy-MM-dd")" />
                        <button type="button" class="today-btn">Bugün</button>
                        <button type="button" class="tomorrow-btn">Yarın</button>
                    </div>
                </div>

                <button type="submit" class="search-btn">Bileti Bul</button>
            </div>
        </form>

